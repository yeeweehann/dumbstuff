<%= form_for @user do |f| %>
    <h1>Sign Up</h1>

    <h5>Username is unchangeable. Please take note</h5>
    <%= f.label :username %> 
  	<%= f.text_field :username, placeholder: "Username" %><br>

    <%= f.label :email %>
    <%= f.text_field :email, placeholder: "Email" %><br>

    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Password" %><br> 

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %><br>

  	<%= f.label :avatar %>
  	<%= f.file_field :avatar %><br>

  	<%= f.submit :"Sign Up" %> 

<% end %>   
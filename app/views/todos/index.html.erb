<% if @todo.count != 0 %>
	<table>
		<tr>
			<th>No.</th>
			<th>Image</th>
			<th>Description</th>
			<th>Status</th>
		</tr>
		<% current_user.todos.each_with_index do |todo,index| %>
			<tr>
				<td><%= index + 1 %>.</td>
				<td>
				<% if todo.image.present? %>
					<%= image_tag todo.image.url(:thumb) %>
				<% else %>
					No image
				<% end %>
				</td>
				<td><%= todo.description %></td>
				<td><%= todo.status %></td>
				<td><%= link_to "Delete Todo", user_todo_path(@user, todo), method: :delete, data: { confirm: "Are you sure?" } %></td>
			</tr>
		<% end %>
	</table>
<% else %>
	You have no Todos for now.
<% end %>

<%= link_to "New Todo", new_user_todo_path %>
<%= link_to "Sign Out", sign_out_path, method: :delete %>